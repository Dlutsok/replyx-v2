# ðŸ”§ ChatAI Backend - Environment Configuration Template
# Copy to .env and customize for your environment

# Environment (development/production)
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_ai
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL_MODE=disable  # Use 'require' for production

# Database Pool Settings
DB_POOL_SIZE=15
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Security
SECRET_KEY=your-super-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Email/SMTP Configuration
YANDEX_SMTP_USER=your-email@yandex.ru
YANDEX_SMTP_PASS=your-app-password
SMTP_SERVER=smtp.yandex.ru
SMTP_PORT=465
FROM_EMAIL=your-email@yandex.ru
FROM_NAME=Your App Name

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Trial Settings
TRIAL_DURATION_DAYS=7
TRIAL_MESSAGE_LIMIT=50

# AI Configuration
AI_TOKEN_POOL_SIZE=10
OPENAI_API_KEY=sk-your-openai-api-key

# RAG/Embeddings
RAG_MAX_CONTEXT_TOKENS_BOT=1500
RAG_MAX_CONTEXT_TOKENS_WIDGET=1200
RAG_MIN_SIMILARITY=0.5
RAG_TOP_K_BOT=5
RAG_TOP_K_WIDGET=4

# Handoff System
HANDOFF_ENABLED=true
HANDOFF_RECIPIENTS=admin@yourapp.com,support@yourapp.com
HANDOFF_MAX_FALLBACKS=2
HANDOFF_MAX_RETRIES=2

# Site/Widget
SITE_SECRET=your-site-secret-key

# External Services
BOT_SERVICE_URL=http://localhost:3002

# Database Monitoring (optional)
DB_SIZE_THRESHOLD_GB=10
TABLE_SIZE_THRESHOLD_GB=1
DB_DISK_USAGE_THRESHOLD=0.85
DB_GROWTH_THRESHOLD_MB_DAY=100
DB_MONITOR_EMAIL_ALERTS=false
DB_MONITOR_ALERT_EMAILS=admin@yourapp.com