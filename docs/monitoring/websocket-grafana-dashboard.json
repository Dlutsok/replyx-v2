{
  "dashboard": {
    "id": null,
    "title": "ReplyX WebSocket Monitoring",
    "tags": ["websocket", "replyÑ…", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "WebSocket Connections Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "websocket_connections_total",
            "legendFormat": "Total Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 900}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Connections by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "websocket_connections_by_type",
            "legendFormat": "{{connection_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Rate Limited IPs",
        "type": "stat",
        "targets": [
          {
            "expr": "websocket_rate_limited_ips",
            "legendFormat": "Rate Limited IPs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "WebSocket Connection Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(websocket_connection_duration_seconds_sum[5m]) / rate(websocket_connection_duration_seconds_count[5m])",
            "legendFormat": "Avg Connection Duration"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Message Queue Status",
        "type": "graph", 
        "targets": [
          {
            "expr": "websocket_message_queue_pending",
            "legendFormat": "Pending Messages"
          },
          {
            "expr": "rate(websocket_message_queue_processed_total[5m]) * 60",
            "legendFormat": "Messages/min"
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "WebSocket Close Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(websocket_close_codes_total[5m]) * 60",
            "legendFormat": "{{code}} - {{reason}}"
          }
        ],
        "yAxes": [
          {
            "label": "Codes/min",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Connection Health Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "websocket_connections_total > 900",
            "legendFormat": "High Connection Count"
          },
          {
            "expr": "websocket_rate_limited_ips > 50", 
            "legendFormat": "High Rate Limiting"
          },
          {
            "expr": "websocket_message_queue_pending > 100",
            "legendFormat": "Message Queue Backlog"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}